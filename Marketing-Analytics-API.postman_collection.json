    {
      "name": "Authentication",
      "item": [
        {
          "name": "Google Ads OAuth",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/oauth/callback?code={{code}}&state={{state}}",
              "host": ["{{baseUrl}}"],
              "path": ["oauth", "callback"],
              "query": [
                {
                  "key": "code",
                  "value": "{{code}}",
                  "description": "OAuth authorization code"
                },
                {
                  "key": "state",
                  "value": "{{state}}",
                  "description": "OAuth state parameter"
                }
              ]
            },
            "description": "Handle Google Ads OAuth callback"
          },
          "response": []
        }
      ]
    },
    {
