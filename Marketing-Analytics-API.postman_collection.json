{
  "info": {
    "name": "Marketing Analytics Dashboard API",
    "description": "API collection for testing Marketing Analytics Dashboard endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Venues",
      "item": [
        {
          "name": "Get All Venues",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/venues",
              "host": ["{{baseUrl}}"],
              "path": ["api", "venues"]
            },
            "description": "Get list of all venues (clients) in the system"
          },
          "response": []
        },
        {
          "name": "Get Venue by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/venues/{{venueId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "venues", "{{venueId}}"]
            },
            "description": "Get specific venue details"
          },
          "response": []
        }
      ]
    },
